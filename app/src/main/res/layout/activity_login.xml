<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/opaquebg"
    tools:context=".SignupAndLogin.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >

            <ImageView
                android:id="@+id/login_photo"
                android:layout_width="154dp"
                android:layout_height="144dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="128dp"
                android:layout_marginLeft="128dp"
                android:layout_marginTop="75dp"
                android:layout_marginEnd="129dp"
                android:layout_marginRight="129dp"
                android:layout_marginBottom="50dp"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/chat" />

            <EditText
                android:id="@+id/login_email"
                android:layout_width="300dp"
                android:layout_height="37dp"
                android:layout_below="@+id/login_photo"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="57dp"
                android:layout_marginRight="57dp"
                android:background="@drawable/inputs"
                android:gravity="center_vertical"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="4dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#E7E7DB"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="300dp"
                android:layout_height="37dp"
                android:layout_below="@+id/login_email"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="57dp"
                android:layout_marginRight="57dp"
                android:background="@drawable/inputs"
                android:gravity="center_vertical"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="4dp"
                android:textAlignment="center"
                android:textColorHint="#E7E7DB"
                android:textSize="18dp" />

            <Button
                android:id="@+id/login_button"
                android:layout_width="300dp"
                android:layout_height="37dp"
                android:layout_below="@id/login_password"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="57dp"
                android:layout_marginRight="57dp"
                android:background="@drawable/gradient_button_color_login"
                android:text="Log In"
                android:textAllCaps="false"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp" />

            <Button
                android:id="@+id/phone_button"
                android:layout_width="300dp"
                android:layout_height="37dp"
                android:layout_below="@+id/login_button"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="57dp"
                android:layout_marginRight="57dp"
                android:background="@drawable/gradient_button_color"
                android:paddingLeft="15dp"
                android:text="Contact Number"
                android:textAllCaps="false"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_button"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="27dp"
                android:gravity="right"
                android:text="Forgot Password?"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/new_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forget_password"
                android:layout_marginLeft="17dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="27dp"
                android:gravity="right"
                android:textSize="16dp"
                android:text="Not an existing User?"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>