<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllFragments.ChatWork.VideoChat.VideoChatActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/subsciber_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">

            <FrameLayout
                android:id="@+id/publisher_container"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="10dp"
                android:background="#3ED823"></FrameLayout>

        </FrameLayout>
    </FrameLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/close_video_chat_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/endcall"
        android:layout_margin="30dp"
        android:layout_alignParentBottom="true"
        app:civ_circle_background_color="#D32F2F" />
</RelativeLayout>