<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivities.UpdateProfileActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/settings_toolbar">

    </include>

    Re<de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/profile_image"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimaryDark"/>
    <EditText
        android:id="@+id/set_username"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:layout_marginRight="25dp"
        android:padding="4dp"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:drawableRight="@drawable/edit_drawable"
        />

    <EditText
        android:id="@+id/set_status"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Status"
        android:layout_below="@+id/set_username"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textAlignment="center"
        android:inputType="textMultiLine"
        android:layout_marginRight="25dp"
        android:padding="4dp"
        android:layout_marginLeft="25dp"
        android:background="@null"
        android:textColor="@color/colorPrimaryDark"
        android:drawableRight="@drawable/edit_drawable"
        />
    <Button
        android:id="@+id/update_settings"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_below="@+id/set_status"
        android:layout_marginTop="25dp"
        android:background="@drawable/gradient_button_color"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:layout_marginRight="25dp"
        android:padding="4dp"
        android:layout_marginLeft="25dp"
        android:textColor="#FFFFFF"
        />
</RelativeLayout>