<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/users_profile_image_request"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/profile_image"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorPrimaryDark"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/user_profile_name_request"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:gravity="start" />
                <ImageView
                    android:id="@+id/user_online_status_request"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/online"
                    android:visibility="invisible"
                    />


            </LinearLayout>
            <TextView
                android:id="@+id/user_status_request"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="status"
                android:textAlignment="center"
                android:visibility="invisible"
                android:layout_marginLeft="10dp"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/accept_button_request"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/accept_req_bg"
                    android:text=""
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:visibility="visible"
                    android:layout_marginStart="50dp" />

                <Button
                    android:id="@+id/reject_button_request"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/reject_req_bg"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:visibility="visible"
                    android:layout_marginStart="75dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>