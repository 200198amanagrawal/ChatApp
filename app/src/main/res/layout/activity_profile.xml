<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivities.FindFriends.ProfileActivity"
    android:background="@drawable/opaquebg">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/visit_profile_image"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:src="@drawable/profile_image"/>
    <TextView
        android:id="@+id/visit_profile_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/visit_profile_image"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textAllCaps="false"
        />
    <TextView
        android:id="@+id/visit_profile_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hey I'm using ChatApp"
        android:layout_below="@+id/visit_profile_username"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/send_msg_req_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/visit_profile_status"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:textColor="#FFFFFF"
        android:text="Send Message"
        android:textAllCaps="false"
        android:background="@drawable/gradient_button_color"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/decline_msg_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_msg_req_button"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:textColor="#FFFFFF"
        android:text="Cancel Request"
        android:textAllCaps="false"
        android:background="@drawable/gradient_button_color_login"
        android:textSize="20sp"
        android:visibility="invisible"
        />
</RelativeLayout>