<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/profile_image"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimaryDark"/>
    <EditText
        android:id="@+id/set_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="15dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/edit_profile"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:layout_marginRight="25dp"
        android:padding="4dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/colorPrimaryDark"
        />

    <EditText
        android:id="@+id/set_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Status...."
        android:layout_below="@+id/set_username"
        android:layout_marginTop="15dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/edit_status"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:layout_marginRight="25dp"
        android:padding="4dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/colorPrimaryDark"
        />
    <Button
        android:id="@+id/update_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_below="@+id/set_status"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:layout_marginRight="25dp"
        android:padding="4dp"
        android:layout_marginLeft="25dp"
        android:textColor="#FFFFFF"
        />
</RelativeLayout>